<UserControl x:Class="Thermostat.Views.HistoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Thermostat.Views"
             xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ListView ItemsSource="{Binding CurrentUsageHistorySettings.DataSets, Mode=OneWay}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <CheckBox IsChecked="{Binding Enabled}" Content="{Binding Name}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Grid Grid.Column="1">
            <lvc:CartesianChart Series="{Binding CurrentUsageHistorySettings.ChartSeries}">
                
            </lvc:CartesianChart>
            <DatePicker HorizontalAlignment="Right" Margin="0,10,50,0" VerticalAlignment="Top" />
            <DatePicker HorizontalAlignment="Right" Margin="0,10,154,0" VerticalAlignment="Top"/>
        </Grid>
    </Grid>
</UserControl>
